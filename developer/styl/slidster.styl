slide-width = 1200px
slide-height = 675px
slide-margin = 20px


slide-bgc = #fff

dark-color = #fff
light-color = #000


html.scrolling,
html.scrolling *
  pointer-events none !important

section#slides article *
  pointer-events none !important

html body section#slides article *[data-click]
    pointer-events all !important

.backer
    position absolute
    z-index 10
    top 0
    right 50px
    height: 75px;
    width: 50px;
    background-color #C00
    &:after
        display block
        content ''
        position absolute
        top 100%
        left 0
        height 0
        width 0
        overflow hidden
        border-style solid
        border-color  #C00 transparent transparent
        border-width 25px 25px 0

a
    color #000
    text-decoration none
    &:hover
        text-decoration underline

.code-0
  code
    font-size 48px

.code-1
  code
    font-size 42px

.code-2
  code
    font-size 36px

.code-3
  code
    font-size 28px

.code-4
  code
    font-size 24px

.code-5
  code
    font-size 20px

html body .font-xxlarge>*,
html body .font-xxlarge>* *
  font-size 72px
  line-height 1.43

.screenshot
  background none
  padding 0
  img
    width 100%
    


.half
  display inline-block
  box-sizing border-box
  width 50%
  vertical-align top

.one-third
  text-align center
  vertical-align bottom
  display inline-block
  box-sizing border-box
  width 30%
  height 80%
  padding 20px
  position relative
  margin-top 40px
  text-align center
  img
    display inline-block
    height 13rem
    width 13rem
  h2
    display inline-block
    margin-top 1rem
    text-align center
    font-size 48px
    line-height 1.43
    font-weight bold

.screen
  img
    max-height 70%
  .url
    font-size 42px
    line-height 1.68
    margin-top 0
    
.screen
  background-color #FFF
  background-size contain
  background-repeat no-repeat
  background-position 50% 50%  
  
.illustration
  background-color #FFF
  background-size cover
  background-repeat no-repeat
  background-position 50% 50%

.qrcode
  img
    max-width 90%
    width 90%
    max-height 70%
    margin auto
    display block
    &.avatar 
      max-width 50%
      margin 0 
  .wrapper
    line-height 0
    width 100%
    .half
      display inline-block
      vertical-align middle
      text-align left
      width 50%
      padding slide-margin
      box-sizing border-box
      h2
        text-transform none
        font-size 36px
        line-height 1.43
    .about-speaker
      display inline-block
      vertical-align middle
      text-align left
      p
        font-size 36px
        height auto
        line-height 1.68
        margin 0
    h1
      display inline-block
      font-size 200px
      vertical-align middle
    h2
      display inline-block
      font-size 75px
      line-height 1
      text-align left
      vertical-align middle
    .logotype
      width 35%
      vertical-align middle
    .link
      width 35%
      vertical-align middle
    .title
      color #d00
    p
      height 100px
      line-height 100px
      font-size 64px
      white-space nowrap

.go-to-page
  position fixed
  top 0
  left 0
  bottom 0
  right 0
  z-index 1000
  margin auto
  background rgba(0,0,0,.75)
  opacity 0
  pointer-events none
  transition opacity .25s
  &.open
    pointer-events auto
    opacity 1
  input
    pointer-events inherit
    outline none
    -webkit-appearance none
    -moz-appearance none
    border-style none
    margin auto
    position absolute
    top 0
    left 0
    bottom 0
    right 0
    width 140px
    height 140px
    background darken(#FFF,10%)
    transition background-color .25s
    border-radius 100%
    padding 20px
    box-sizing border-box
    text-align center
    line-height 60px
    font-size 42px
    &:focus
      background-color #FFF

pre
  display inline-block
  vertical-align middle
  text-align left
  white-space pre
  &.block
    display block
  code
    font-family "PT Mono"
    line-height 1.68
html
  height 100%
  width 100%

body
  background-color #333
  font-family "PT Sans"
  min-height 100%
  width 100%
  position relative

  -webkit-touch-callout none
  -webkit-user-select none
  -khtml-user-select none
  -moz-user-select none
  -ms-user-select none
  user-select none

body:not(.fs)
  #slides
    transform none !important

.progress
  position fixed
  top -4px
  left 0
  right 0
  height 4px
  margin auto
  z-index 1000
  background-color rgba(255,255,255,.5)
  transition top .25s
  .value
    height 4px
    width 0
    background-color rgba(255,0,0,.75)
    transition width .25s

body.fs
  background-color #FFF
  height 100%
  overflow hidden
  transform none
  .progress
    top 0
  #slides
    width slide-width
    height slide-height
    overflow hidden
    position fixed
    margin 0
    margin-top -(slide-height/2)
    margin-left -(slide-width/2)
    top 50%
    left 50%
    article
      position absolute
      margin auto
      top 0
      bottom 0
      right 0
      left 0
      z-index 100
      opacity 0
      &.current
        opacity 1
        z-index 110



h1, h2, h3, h4, h5
  font-family "PT Sans Caption"
  text-transform uppercase

ol
  text-align left
  font-size 24px
  line-height 32px
  padding 30px 60px
  list-style decimal
  li
    margin 0 0 20px
ul
  text-align left
  font-size 24px
  line-height 32px
  padding 30px 60px
  list-style disc
  li
    margin 0 0 20px

article
  overflow hidden
  width slide-width
  height slide-height
  margin slide-margin auto
  background-color slide-bgc
  position relative
  color light-color
  counter-increment slide
  opacity 1
  transition opacity .25s
  &.current
    box-shadow 0 0 0 10px rgba(255, 255, 255, .25)
  &:after
    font-family "PT Sans"
    content counter(slide)
    position absolute
    display block
    bottom 10px
    right 10px
    width 30px
    height 30px
    line-height 30px
    color #000
    text-align center
    font-size 14px
    z-index 100
    border-radius 100%
    background-color #FFF
  &>.wrapper
    line-height 1.68
  &.cloud
    h1
      position absolute
      margin auto
      text-align center
      display block
      border-radius 100%
      background-color #FFF
      &>.wrapper
        display inline-block
        vertical-align middle
      &:after
        content "."
        height 0
        width 0
        display block
        overflow hidden
        position absolute
        border-color #fff transparent transparent
        border-style solid
        border-width 30px 10px 0 10px
        top 100%
        left 50%
        margin -5px 0 0 -10px
        transform-origin 10px -100px
        transform rotate(-30deg)
  &.title
    h1
      width 100%
      line-height 3
      font-size 30px
      display inline-block
      vertical-align middle
  &.dark
    color dark-color
  &.center
    text-align center
    line-height slide-height
  &>.wrapper
    position relative
    display inline-block
    vertical-align middle

html body section#slides article iframe
  position absolute
  top 0
  bottom 0
  right 0
  left 0
  width 100%
  height 100%
  pointer-events all !important

html body section#slides article iframe.half
    width 50%

html body section#slides article iframe.half:first-child
    right auto

html body section#slides article iframe.half:last-child
    left auto


.blockquote
  background-color #e8e8e8
  line-height slide-height
  text-align center
  blockquote
    width 90%
    text-align left
    display inline-block
    vertical-align middle
    line-height 56px 
    time
      font-size 42px 
      opacity .5 
    cite 
      opacity .5
      float right
      font-size 42px 
    p
      padding 56px 0 0 
      clear both
      font-size 42px 
      font-style italic
      &:before
        content "> "
        font-style normal